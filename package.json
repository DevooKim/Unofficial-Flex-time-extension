{
    "name": "unofficial-flex-extension",
    "version": "3.0.0",
    "private": true,
    "scripts": {
        "_build": "rm -rf ./unofficial-flex-extension && rm -rf ./unofficial-flex-extension.zip && craco build && zip -r unofficial-flex-extension.zip ./unofficial-flex-extension",
        "build": "vite build",
        "build:dev": "NODE_ENV=development vite build --mode development",
        "build:firefox": "cp manifest.firefox.json manifest.json && vite build && web-ext build --source-dir=dist --artifacts-dir=. --overwrite-dest --filename='unofficial-flex-extension-{version}-firefox.xpi' && git checkout manifest.json",
        "dev": "nodemon",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/react": "^11.9.0",
